<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Wz" parent="android:ThemeOverlay.Material.ActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/start</item>
    </style>

    <style name="dialog_transparent">
        <item name="android:windowBackground">@drawable/round_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="menu_dialog_style" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowEnterAnimation">@anim/menu_show</item>
        <item name="android:windowExitAnimation">@anim/menu_hide</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>